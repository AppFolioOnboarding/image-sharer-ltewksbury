<h1 id="header">
  Add a New Image
</h1>

<% if @image&.errors&.any? %>
    <div id="error_explanation">
      <% @image.errors.messages[:image_url].each do |msg| %>
          <p><%= msg %></p>
      <% end %>
    </div>
<% end %>

<%= form_with scope: :image, url: images_path, local: true do |form| %>
    <div>
      <%= form.label :image_url %>
    </div>
    <div>
      <%= form.text_field :image_url %>
    </div>
    <div>
      <%= form.label 'Add tags' %>
    </div>
    <div>
      <%= form.text_field :tag_list, placeholder: '(optional)' %>
    </div>
    <br>
    <div>
      <%= form.submit %>
    </div>
<% end %>
