<html>
  <%= render "nav_header" %>

  <body>
    <div class="container one-image">
      <%= image_tag(@image.image_url) %>
      <h5>
        <% @image.tag_list.each do |tag| %>
          <%= tag %>
        <% end %>
      </h5>
      <div class="delete">
        <%= link_to 'Destroy', @image, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>

    <%= render "footer" %>
  </body>

</html>
